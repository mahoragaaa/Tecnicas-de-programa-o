package br.edu.fatecpg.tecprog.progencapsulamento.model;

public class Carro {
	private String marca;
	private String modelo;
	private int ano;
	private double tanque;
	
	public Carro(String marca, String modelo, int anos) {
		if(anos < 2015) {
			System.out.println("Não pode criar");
		} else {
			this.ano = anos; 
		}
		
		this.marca = marca;
		this.modelo = modelo;
	}
	
	public String getMarca(){
		return this.marca;
	}
	
	public String getModelo(){
		return this.modelo;
	}
	
	public int getAno(){
		return this.ano;
	}
	
	public double getTanque(){
		return this.tanque;
	}
	
	public void setMarca(String joao) {
		this.marca = joao;
	}
	
	public void setModelo(String joao) {
		this.modelo = joao;
	}
	
	public void setAno(int joao) {
		if(joao<2025) {
			System.out.println("o ano Não pode ser alterado");
		}else {
		this.ano = joao;
		}
	}
	
	public void setTanque(double joao) {
		this.tanque = joao;
	}
	
	public void ligar() {
		System.out.println("carro ligado");
	}
	
	public void acelerar() {
		System.out.println("Acelerando");
	}
	
	
}
